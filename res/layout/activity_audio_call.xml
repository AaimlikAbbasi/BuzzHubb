<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".AudioCall">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="John Cooper"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/profileima"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="50:08"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileima"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profileimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <ImageView
        android:id="@+id/bottombuttons2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkblue"/>


    <View
        android:id="@+id/greybar"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_alignTop="@id/bottombuttons2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#9e9f9f"
      />

    <ImageView
        android:id="@+id/endbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/endcall"
        android:layout_below="@id/greybar"
        android:layout_centerHorizontal="true"
        />


    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@id/greybar"
        android:id="@+id/micmutebutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/micmute"
        android:layout_marginEnd="40dp"
        />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@id/greybar"
        android:id="@+id/speaker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/volume"
        android:layout_marginStart="40dp"
        />

</RelativeLayout>