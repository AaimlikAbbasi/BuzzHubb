<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_recycler_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatrowprofileimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profileimg"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_toEndOf="@+id/chatrowprofileimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/rounded" />

    <TextView
        android:id="@+id/chatrowprofilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/messagestatus"
        android:layout_alignTop="@+id/chatrowprofileimage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messagestatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="Hey, what's up?"
        android:layout_toRightOf="@id/chatrowprofileimage"
        android:layout_below="@+id/chatrowprofilename"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:id="@+id/messagetimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="12:07"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@+id/chatrowprofilename"
        android:layout_marginBottom="2dp"
        />



</RelativeLayout>