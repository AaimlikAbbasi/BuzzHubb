<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DBF0F7"
    android:layout_height="300dp"
    tools:context=".BuzzHub">


    <ImageView
        android:id="@+id/textbackground3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        android:src="@drawable/rounded"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="raj__2255"
        android:layout_toRightOf="@+id/textbackground3"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@+id/name"
        android:layout_marginTop="20dp"

        android:text="..."
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/main2"
        android:layout_marginStart="30dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="one of the most popular thinking about the raining"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:id="@+id/post"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="90dp"
         />


    <ImageView
        android:id="@+id/like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/like_739231"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="60dp"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="280dp"
        android:text="Like"
        android:layout_marginLeft="85dp"
        />
    <ImageView
        android:id="@+id/comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/talk_10298133"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="280dp"
        android:text="Comments"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="175dp"
        />

    <ImageView
        android:id="@+id/share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/share_2958791"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="275dp"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="280dp"
        android:text="Share"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="300dp"
        />




</RelativeLayout>